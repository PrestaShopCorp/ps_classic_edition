{
  "name": "prestashopcorp/ps_edition_basic",
  "type": "prestashop-module",
  "description": "PrestaShop Edition Basic module",
  "license": "AFL-3.0",
  "require": {
    "php": ">=8.1",
    "prestashop/module-lib-service-container": "^2.0",
    "symfony/string": "<6.0",
    "prestashop/prestashop-accounts-installer": "^1.0",
    "symfony/http-client": "^6.4"
  },
  "require-dev": {
    "prestashop/php-dev-tools": "^4",
    "friendsofphp/php-cs-fixer": "3.64",
    "phpstan/phpstan": "^1.10",
    "overtrue/phplint": "^9",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "PrestaShop\\Module\\PsEditionBasic\\": "src/"
    },
    "classmap": [
      "ps_edition_basic.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false
  },
  "scripts": {
    "php-cs-fixer": [
      "@php ./vendor/bin/php-cs-fixer fix"
    ],
    "php-cs-fixer-dry": [
      "@php ./vendor/bin/php-cs-fixer fix --dry-run"
    ],
    "php-lint": [
      "@php ./vendor/bin/phplint --exclude=vendor ."
    ],
    "unit-tests": [
      "@php ./vendor/bin/phpunit tests"
    ]
  }
}
